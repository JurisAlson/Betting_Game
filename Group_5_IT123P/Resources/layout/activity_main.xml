<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginLeft="85px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="200px"
            android:layout_height="200px"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/randColor_1" />
        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="200px"
            android:layout_height="200px"
            android:id="@+id/randColor_2" />
         <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="200px"
            android:layout_height="200px"
            android:id="@+id/randColor_3" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:text="ROLL"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/Roll_Button" />
        <Button
            android:text="STOP"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/Stop_Button" />
    </LinearLayout>


     <LinearLayout
        android:layout_marginTop="200px"
        android:layout_marginLeft="100px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Wallet:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="67.5dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />
        <EditText
            android:inputType="number"
            android:layout_width="88.5dp"
            android:layout_height="match_parent"
            android:id="@+id/money"
            android:textSize="25px"
            android:text="" />        
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="100px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/Red_Button"
            android:layout_width="200px"
            android:layout_height="200px"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="Red Button" />

        <ImageButton
            android:id="@+id/Blue_Button"
            android:layout_width="200px"
            android:layout_height="200px"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="Blue Button" />

        <ImageButton
            android:id="@+id/Yellow_Button"
            android:layout_width="200px"
            android:layout_height="200px"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="Yellow Button" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="100px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:inputType="number"
            android:layout_width="98.0dp"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/Inputfor_red" />

        <EditText
            android:inputType="number"
            android:layout_width="105.0dp"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/Inputfor_blue" />

        <EditText
            android:inputType="number"
            android:layout_width="107.0dp"
            android:layout_height="30.5dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/Inputfor_yellow" />
    </LinearLayout>



    <LinearLayout
        android:layout_marginLeft="100px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="200px"
            android:layout_height="200px"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/Pink_Button" />
        <ImageButton
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="200px"
            android:layout_height="200px"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/Green_Button" />
         <ImageButton
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="200px"
            android:layout_height="200px"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/White_Button" />
    </LinearLayout>

     <LinearLayout
        android:layout_marginLeft="100px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:inputType="number"
            android:layout_width="98.0dp"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/Inputfor_pink" />
        <EditText
            android:inputType="number"
            android:layout_width="105.0dp"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/Inputfor_green" />
        <EditText
            android:inputType="number"
            android:layout_width="107.0dp"
            android:layout_height="30.5dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/Inputfor_white" />
     </LinearLayout>


</LinearLayout>
